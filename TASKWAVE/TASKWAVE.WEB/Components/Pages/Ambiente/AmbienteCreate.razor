@page "/AmbienteCreate"
@rendermode InteractiveServer
@layout EmptyLayout
@inject HttpClient Http

<PageTitle>Criar Ambiente</PageTitle>

<main>
    <div class="container-flex">
        
        <div class="linha-vertical"></div>

        
        <section class="right-content">
            <div>

                <h2 class="text-white mb-2">Meus Ambientes</h2>
                <h4 class="text-muted mb-4">Criar Ambiente</h4>

            </div>

            <EditForm Model="@environmentToCreate" OnValidSubmit="HandleValidSubmit">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-warning" />

                <div class="form-group mb-3">
                    <label>Nome do Ambiente</label>
                    <InputText class="form-control" @bind-Value="environmentToCreate.environmentName" placeholder="Insira o nome do Ambiente" />
                </div>

                <div class="form-group mb-3">
                    <label>Descrição do Ambiente</label>
                    <InputTextArea class="form-control" @bind-Value="environmentToCreate.environmentDescription" placeholder="Insira a descrição do Ambiente" />
                </div>

                <button type="submit" class="btn btn-primary w-25">
                    Criar Ambiente
                </button>
            </EditForm>

            @if (!string.IsNullOrEmpty(mensageResponse))
            {
                <div class="mt-3 alert alert-info">@mensageResponse</div>
            }
        </section>
    </div>
</main>


@code {
    private AmbienteRequest environmentToCreate = new();
    private string mensageResponse;

    private async Task HandleValidSubmit()
    {
        try
        {
            var response = await Http.PostAsJsonAsync("api/Ambiente", environmentToCreate);

            if (response.IsSuccessStatusCode)
            {
                mensageResponse = "Ambiente criado com sucesso.";
                environmentToCreate = new();
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                mensageResponse = $"Erro: {error}";
            }
        }
        catch (Exception ex)
        {
            mensageResponse = $"Erro na requisição: {ex.Message}";
        }
    }
}

