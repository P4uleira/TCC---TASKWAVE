@using TASKWAVE.DOMAIN.Helpers
<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">   
    <nav class="flex-column">
        @foreach (var option in Options)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" title="@option.Title" href="@option.Url">
                    <span class="bi @option.TypeIcon" aria-hidden="true"></span> @option.Text
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {
    [Parameter]
    public List<HyperLink> Options { get; set; } = new List<HyperLink>();
}

